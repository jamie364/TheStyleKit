            padding: 12px 16px;
            border: 2px solid #E5E5E5;
            border-radius: 8px;
            font-size: 16px;
            min-height: 120px;
            font-family: inherit;
        }
        
        .price-input-wrapper {
            position: relative;
        }
        
        .price-symbol {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            font-size: 18px;
            font-weight: 600;
        }
        
        .price-input {
            padding-left: 36px;
        }
        
